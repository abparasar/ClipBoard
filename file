from datasets import load_dataset

raw_train = load_dataset("json", data_files=TRAIN_FILE, split="train")
raw_val = load_dataset("json", data_files=VAL_FILE, split="train")  # 'train' because it's single-split load
raw_test = load_dataset("json", data_files=TEST_FILE, split="train")

raw_datasets = {
    "train": raw_train,
    "validation": raw_val,
    "test": raw_test
}