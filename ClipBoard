import pandas as pd
from openpyxl import Workbook
from openpyxl.utils.dataframe import dataframe_to_rows
from openpyxl.styles import Font

# Create a sample DataFrame
data = {"RAI ID": [101, 102, 103]}
df = pd.DataFrame(data)

# Define the base URL
base_url = "https://www.example.com/"

# Save the DataFrame to an Excel file with hyperlinks in the RAI ID column
wb = Workbook()
ws = wb.active
ws.title = "RAI Data"

# Write the header
ws.append(df.columns.tolist())

# Write rows with hyperlinks
for _, row in df.iterrows():
    rai_id = row["RAI ID"]
    url = f"{base_url}{rai_id}"
    
    # Write the RAI ID as a hyperlink
    cell = ws.cell(row=ws.max_row + 1, column=1, value=rai_id)
    cell.hyperlink = url
    cell.font = Font(color="0000FF", underline="single")  # Style the hyperlink

# Save the workbook
wb.save("RAI_Data.xlsx")