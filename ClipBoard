import matplotlib.pyplot as plt
import seaborn as sns

# Set style
sns.set(style="whitegrid")

# Create a figure with 2 subplots: one for dialogue, one for one_liner
plt.figure(figsize=(12, 5))

# Plot dialogue relevance
plt.subplot(1, 2, 1)
sns.histplot(df['dialogue_relevance'], bins=30, kde=True, color='royalblue')
plt.title("Dialogue Banking Relevance")
plt.xlabel("Cosine Similarity")
plt.ylabel("Count")

# Plot one_liner relevance
plt.subplot(1, 2, 2)
sns.histplot(df['one_liner_relevance'], bins=30, kde=True, color='seagreen')
plt.title("One-liner Banking Relevance")
plt.xlabel("Cosine Similarity")
plt.ylabel("Count")

# Show plot
plt.tight_layout()
plt.show()