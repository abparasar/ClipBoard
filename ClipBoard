import pandas as pd

# Define the path to your Excel file
file_path = 'your_file.xlsx'  # Replace with your Excel file path

# List of specific columns to read (either by name or column index)
columns_to_read = ['Column1', 'Column3', 'Column5']  # Replace with the actual column names you need

# Read the specific columns from the Excel file
df = pd.read_excel(file_path, usecols=columns_to_read)

# Display the loaded DataFrame
print(df)