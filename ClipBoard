import pandas as pd
from datetime import datetime

# Sample DataFrame
data = {
    'Due_Date': ['Jan 25, 2025', 'Jan 10, 2025', 'Feb 15, 2025', 'Jan 5, 2024']
}
df = pd.DataFrame(data)

# Convert 'Due_Date' column to datetime format
df['Due_Date'] = pd.to_datetime(df['Due_Date'], format='%b %d, %Y')

# Calculate the number of days from today's date
today = datetime.now()  # Get today's date
df['Days_Due'] = (df['Due_Date'] - today).dt.days  # Subtract and get the number of days

# Display the DataFrame
print(df)