import pyautogui
import time
import webbrowser
import os
import shutil

# Open the webpage using the default browser
url = 'https://example.com'  # Replace with your URL
webbrowser.open(url)

# Wait for the page to load
time.sleep(5)

# Simulate pressing `Ctrl + S` to open the save dialog in most browsers
pyautogui.hotkey('ctrl', 's')

# Wait for the Save As dialog to open
time.sleep(2)

# Type the filename with .html extension (the browser may default to .html)
save_path = 'C:\\path\\to\\save\\file.html'  # Set a fixed path
pyautogui.write(save_path)

# Press Enter to save the file
pyautogui.press('enter')

# Wait for the file to save
time.sleep(2)

