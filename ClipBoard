import os

for i, params in enumerate(sampler):
    trial_dir = f"./results/trial_{i+1}"
    checkpoint_dir = os.path.join(trial_dir, "checkpoint-xxx")  # generic path

    if os.path.exists(trial_dir):
        print(f"âœ… Skipping Trial {i+1} â€” results already exist at {trial_dir}")
        continue

    print(f"ðŸš€ Running Trial {i+1} with:")
    for key, value in params.items():
        print(f"   {key}: {value}")
    print()

    args = get_training_arguments(params, output_dir=trial_dir)

    trainer = Seq2SeqTrainer(
        model=model,
        args=args,
        train_dataset=train_data,
        eval_dataset=eval_data,
        tokenizer=tokenizer,
        data_collator=data_collator,
    )

    trainer.train()