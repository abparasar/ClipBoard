import pandas as pd
from datetime import datetime, timedelta

# Sample DataFrame
data = {'Date': ['Jan 5, 2025', 'Feb 10, 2025', 'Mar 15, 2025']}
df = pd.DataFrame(data)

# Convert the 'Date' column to datetime
df['Date'] = pd.to_datetime(df['Date'], format='%b %d, %Y')

# Add 30 calendar days to the 'Date' column
df['New_Date'] = df['Date'] + timedelta(days=30)

# Display the DataFrame
print(df)