import pandas as pd
from sklearn.feature_extraction.text import ENGLISH_STOP_WORDS

# Sample dataframe
df = pd.DataFrame({'Text': ['This is a simple example sentence.', 
                            'Another example with different stop words.']})

# Function to remove stop words using scikit-learn's ENGLISH_STOP_WORDS
def remove_stop_words(text):
    words = text.split()  # Split the sentence into words
    return ' '.join([word for word in words if word.lower() not in ENGLISH_STOP_WORDS])

# Apply function to remove stop words from the 'Text' column and create a new column 'Filtered_Text'
df['Filtered_Text'] = df['Text'].apply(remove_stop_words)

print(df)