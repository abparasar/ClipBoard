import pandas as pd

# Sample dataframe with sentences
df = pd.DataFrame({'Text': ['This is a simple example sentence.',
                            'Another example with different words.',
                            'This example is different from the others.']})

# Function to extract unique words from a dataframe column
def get_unique_words(column):
    # Create a set to hold unique words
    unique_words = set()
    
    # Iterate through each sentence in the column
    for sentence in column:
        words = sentence.split()  # Split sentence into words
        unique_words.update(words)  # Add words to the set

    return unique_words

# Get unique words from the 'Text' column
unique_words_set = get_unique_words(df['Text'])

# Create a new dataframe from the unique words set
unique_words_df = pd.DataFrame(unique_words_set, columns=['Unique_Words'])

# Reset index for better readability (optional)
unique_words_df.reset_index(drop=True, inplace=True)

print(unique_words_df)