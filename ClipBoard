import pandas as pd

# Assuming you have a DataFrame df with 15,000 rows
df = pd.read_csv('your_dataframe.csv')  # Load your DataFrame if it's from a CSV file

# Calculate the number of times to repeat the DataFrame
repeat_count = 1000000 // len(df)

# Repeat the DataFrame
df_expanded = pd.concat([df] * repeat_count, ignore_index=True)

# Save to a new CSV file (optional)
df_expanded.to_csv('expanded_dataframe.csv', index=False)