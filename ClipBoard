import langid
import pandas as pd

# Sample data
df = pd.DataFrame({
    'utterance': [
        "hello",
        "oye",
        "cÃ³mo estÃ¡s",
        "haan theek hai",
        "fax a complaint",
        "bonjour",
        "what's your name?",
    ]
})

# Function to check if English
def is_english(text):
    lang, _ = langid.classify(text)
    return lang == 'en'

# Apply and filter
df['is_english'] = df['utterance'].apply(is_english)
df_english = df[df['is_english']].reset_index(drop=True)
df_non_english = df[~df['is_english']].reset_index(drop=True)

# Result
print("âœ… English utterances:")
print(df_english)

print("\nðŸš« Non-English utterances:")
print(df_non_english)